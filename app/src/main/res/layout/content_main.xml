<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bid.a02.a02clientproject.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGoToMap"
            android:text="@string/go_to_the_map"
            />

        <Button
            android:id="@+id/btnRetroFit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGoToRetrofit"
            android:text="Go To retrofit Calls"
/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnGoToServer"
            android:text="Go To Server Calls" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="btnGoToTheDb"
            android:text="Go to the DB"
             />

        <Button
            android:id="@+id/btnGoToCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="btnCamera"
            android:text="Camera"
            />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnNotification_click"
            android:text="Notifications" />

        <Button
            android:id="@+id/btnHouses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnHouse_click"
            android:text="Houses" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
